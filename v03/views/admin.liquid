<style>
  .admin-container {
    display: flex;
    height: 80vh;
    background-color: var(--off-black);
  }

  .admin-sidebar {
    width: 350px;
    background-color: var(--dark-grey);
    border-right: 2px solid var(--green);
    overflow-y: auto;
    padding: 1rem;
  }

  .admin-sidebar h2 {
    margin-top: 0;
    color: var(--white);
    font-size: 1.5rem;
  }

  .conversation-item {
    padding: 1rem;
    margin-bottom: 0.5rem;
    background-color: var(--grey);
    border-radius: 0.5rem;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .conversation-item:hover {
    border-color: var(--green);
    background-color: var(--off-black);
  }

  .conversation-item.active {
    border-color: var(--green);
    background-color: var(--green);
    color: var(--off-black);
  }

  .conversation-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .conversation-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .conversation-info h4 {
    margin: 0;
    font-size: 0.95rem;
  }

  .conversation-info p {
    margin: 0;
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .admin-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background-color: var(--off-black);
  }

  .admin-header {
    padding: 1rem;
    border-bottom: 2px solid var(--green);
    background-color: var(--dark-grey);
    color: var(--white);
  }

  .admin-header h3 {
    margin: 0;
  }

  .admin-messages {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .message-bubble {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    max-width: 70%;
    word-wrap: break-word;
  }

  .message-bubble.student {
    align-self: flex-start;
    background-color: var(--grey);
    color: var(--white);
  }

  .message-bubble.admin {
    align-self: flex-end;
    background-color: var(--green);
    color: var(--off-black);
  }

  .message-time {
    font-size: 0.75rem;
    opacity: 0.7;
    margin-top: 0.25rem;
  }

  .admin-input {
    padding: 1rem;
    background-color: var(--dark-grey);
    border-top: 2px solid var(--green);
    display: flex;
    gap: 0.5rem;
  }

  .admin-input textarea {
    flex: 1;
    padding: 0.5rem;
    border: 1px solid var(--green);
    border-radius: 0.5rem;
    background-color: var(--grey);
    color: var(--white);
    resize: none;
    font-family: "Inter", sans-serif;
  }

  .admin-input textarea:focus {
    outline: none;
    border-color: var(--green);
    box-shadow: 0 0 5px var(--green);
  }

  .admin-input button {
    background-color: var(--green);
    color: var(--off-black);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: bold;
  }

  .admin-input button:hover {
    box-shadow: var(--green) 0px 5px 5px 0px;
  }

  .empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: var(--grey);
    text-align: center;
  }

  @media (max-width: 768px) {
    .admin-container {
      flex-direction: column;
    }

    .admin-sidebar {
      width: 100%;
      max-height: 200px;
      border-right: none;
      border-bottom: 2px solid var(--green);
    }

    .message-bubble {
      max-width: 90%;
    }
  }
</style>

<div class="admin-container">
  <div class="admin-sidebar">
    <h2>Berichten</h2>
    {% if conversations.size > 0 %}
      {% for conversation in conversations %}
        <div class="conversation-item" onclick="selectConversation('{{ conversation.studentId }}')">
          <div class="conversation-header">
            <img src="{{ conversation.studentAvatar }}" alt="{{ conversation.studentName }}" class="conversation-avatar">
            <div class="conversation-info">
              <h4>{{ conversation.studentName }}</h4>
              <p>{{ conversation.messageCount }} bericht(en)</p>
            </div>
          </div>
          <p style="margin: 0; font-size: 0.8rem; opacity: 0.7;">{{ conversation.lastMessage | truncate: 50 }}</p>
        </div>
      {% endfor %}
    {% else %}
      <p style="color: var(--grey);">Nog geen berichten</p>
    {% endif %}
  </div>

  <div class="admin-main">
    <div class="admin-header">
      <h3 id="conversationTitle">Selecteer een gesprek</h3>
    </div>

    <div class="admin-messages" id="adminMessages">
      <div class="empty-state">Selecteer een student om berichten te zien</div>
    </div>

    <div class="admin-input" id="adminInput" style="display: none;">
      <form id="replyForm" style="display: flex; width: 100%; gap: 0.5rem;">
        <textarea id="replyInput" placeholder="Typ je antwoord..." rows="1"></textarea>
        <button type="submit">Stuur</button>
      </form>
    </div>
  </div>
</div>

<script>
  const conversations = {
    {% for conversation in conversations %}
      '{{ conversation.studentId }}': {
        name: '{{ conversation.studentName }}',
        messages: [
          {% for message in conversation.messages %}
            {
              text: `{{ message.text | escape }}`,
              senderId: '{{ message.senderId }}',
              timestamp: '{{ message.timestamp }}'
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }{{ ',\n' unless forloop.last }}
    {% endfor %}
  };

  let currentStudentId = null;

  function selectConversation(studentId) {
    currentStudentId = studentId;
    const conv = conversations[studentId];
    
    // Update active state
    document.querySelectorAll('.conversation-item').forEach(el => {
      el.classList.remove('active');
    });
    event.target.closest('.conversation-item').classList.add('active');
    
    // Update title
    document.getElementById('conversationTitle').textContent = `Chat met ${conv.name}`;
    
    // Display messages
    const messagesDiv = document.getElementById('adminMessages');
    messagesDiv.innerHTML = '';
    
    conv.messages.forEach(msg => {
      const bubble = document.createElement('div');
      bubble.className = `message-bubble ${msg.senderId === 'admin' ? 'admin' : 'student'}`;
      const date = new Date(msg.timestamp).toLocaleString('nl-NL');
      bubble.innerHTML = `<p>${escapeHtml(msg.text)}</p><div class="message-time">${date}</div>`;
      messagesDiv.appendChild(bubble);
    });
    
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
    
    // Show input
    document.getElementById('adminInput').style.display = 'flex';
  }

  function escapeHtml(text) {
    const map = {
      '&': '&amp;',
      '<': '&lt;',
      '>': '&gt;',
      '"': '&quot;',
      "'": '&#039;'
    };
    return text.replace(/[&<>"']/g, m => map[m]);
  }

  document.getElementById('replyForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const replyText = document.getElementById('replyInput').value.trim();
    if (!replyText || !currentStudentId) return;
    
    try {
      const response = await fetch('/send-reply', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          studentId: currentStudentId,
          message: replyText
        })
      });
      
      const data = await response.json();
      if (data.success) {
        // Add message to display
        const messagesDiv = document.getElementById('adminMessages');
        const bubble = document.createElement('div');
        bubble.className = 'message-bubble admin';
        const date = new Date(data.message.timestamp).toLocaleString('nl-NL');
        bubble.innerHTML = `<p>${escapeHtml(replyText)}</p><div class="message-time">${date}</div>`;
        messagesDiv.appendChild(bubble);
        
        document.getElementById('replyInput').value = '';
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
      }
    } catch (error) {
      console.error('Error sending reply:', error);
    }
  });
</script>

