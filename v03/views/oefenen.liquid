{% render 'partials/head.liquid' %}

    <main>
        <div class="card" id="card">
          <div class="card__inner">
           <div class="card__face card__face--front">
             <div class="card__header">
             <div class="card__image">
          <img src="Media.png" alt="avatar" />
        </div>
        <div class="card__details">
          <h1>{{ person.name }}</h1>
          {% comment %} <p>{{ person|json }}</p> {% endcomment %}
        </div>
        <p class="card__quote">Full stack developer</p>
      </div>
      <div class="card__body">
        <ul>
          <li><a href="https://github.com/ThomasSeisveld">GitHub</a></li>
          <li><a href="https://www.linkedin.com/in/thomas-seisveld-891a05330/">LinkedIn</a></li>
          <li><a href="https://www.instagram.com/thomas_seisveld">Instagram</a></li>
        </ul>
        <button id="toggleButton">Meer informatie</button>
      </div>
    </div>

    <div class="card__face card__face--back">
      <div class="card__body">
             <p>{{ person|json }}</p>
              <button id="backButton">Terug</button>
            </div>        
          </div>
          </div>
        </div>
      </main>

{% render 'partials/foot.liquid' %}
